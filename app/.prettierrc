{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"semi": false,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",

	"plugins": ["prettier-plugin-svelte"],

	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"htmlWhitespaceSensitivity": "ignore",
				"svelteSortOrder": "markup-options-scripts-styles",
				"svelteStrictMode": true,
				"svelteAllowShorthand": true,
				"svelteIndentScriptAndStyle": true
			}
		}
	]
}
