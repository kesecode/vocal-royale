{
  // VS Code tasks to manage Docker Compose lifecycle
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose: rebuild & up (no-cache, force-recreate)",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "set -euo pipefail; docker compose down; docker compose down -v; docker compose build --no-cache backend; docker compose build --no-cache app; docker compose up -d --force-recreate"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}

