{
  // VS Code tasks to manage Docker Compose lifecycle
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose: rebuild & up (no-cache, force-recreate)",
      "dependsOn": ["Kill PocketBase"],
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "set -euo pipefail; docker compose down -v; docker compose build --no-cache backend; docker compose build --no-cache app; docker compose up -d"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Start PocketBase",
      "type": "shell",
      "dependsOn": ["Kill PocketBase"],
      "command": "./pocketbase superuser upsert admin_db@vocal.royale vocal_royale_2025 && nohup ./pocketbase serve",
      "options": {
        "cwd": "${env:HOME}/Dev/pocketbase"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Kill PocketBase",
      "type": "shell",
      "command": "pkill -9 pocketbase || echo 'Keine PocketBase-Prozesse gefunden'",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
