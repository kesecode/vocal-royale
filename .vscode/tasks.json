{
  // VS Code tasks to manage Docker Compose lifecycle
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose: rebuild & up (no-cache, force-recreate)",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-lc",
        "set -euo pipefail; docker compose down; docker compose down -v; docker compose build --no-cache backend; docker compose build --no-cache app;"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Start PocketBase",
      "type": "shell",
      "command": "./pocketbase superuser upsert admin_db@vocal.royale vocal_royale_2025 && nohup ./pocketbase serve > pocketbase.log 2>&1 &", 
      "options": {
        "cwd": "${env:HOME}/Dev/pocketbase"
      },
      "problemMatcher": [],
      "isBackground": true
    }
  ]
}
