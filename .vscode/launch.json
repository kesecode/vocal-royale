{
  // Run and debug the SvelteKit dev server via `npm run dv` in ./app
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "App: SvelteKit dev (npm run dv)",
      "cwd": "${workspaceFolder}/app",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dv"
      ],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "serverReadyAction": {
        "pattern": "(https?://localhost:3000/?).*",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      // Runs the full Docker Compose rebuild (no-cache) and starts containers,
      // then opens the app in the browser.
      "type": "chrome",
      "request": "launch",
      "name": "Docker: rebuild & up + open app",
      "preLaunchTask": "compose: rebuild & up (no-cache, force-recreate)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/app"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: Node (9229)",
      "port": 9229,
      "restart": true
    }
  ]
}
