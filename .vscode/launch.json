{
  // Run and debug the SvelteKit dev server via `npm run dv` in ./app
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "npm run dev",
      "cwd": "${workspaceFolder}/app",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dv",
        "--",
        "--host"
      ],
      "preLaunchTask": "Start PocketBase",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "serverReadyAction": {
        "pattern": "(https?://localhost:5173/?).*",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: Node (9229)",
      "port": 9229,
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Generate Test Data (Default)",
      "program": "${workspaceFolder}/app/tests/e2e/scripts/generate-test-data.js",
      "cwd": "${workspaceFolder}/app/tests/e2e/scripts",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Generate Test Data (Custom)",
      "program": "${workspaceFolder}/app/tests/e2e/scripts/generate-test-data.js",
      "cwd": "${workspaceFolder}/app/tests/e2e/scripts",
      "args": [
        "--participants", "10",
        "--jurors", "3",
        "--spectators", "5",
        "--rounds", "4",
        "--finalSongs", "2"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Generate Test Data (Confirmed Songs)",
      "program": "${workspaceFolder}/app/tests/e2e/scripts/generate-test-data.js",
      "cwd": "${workspaceFolder}/app/tests/e2e/scripts",
      "args": [
        "--participants", "5",
        "--jurors", "2",
        "--spectators", "4",
        "--confirmed"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
